<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kjsingh002.Fragments.MainScreenFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="180dp">
            <ImageView
                android:id="@+id/my_home"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_baseline_home_work_24"
                android:layout_width="160dp"
                android:layout_alignParentLeft="true"
                android:layout_height="160dp"/>
            <TextView
                android:text="My Home"
                android:layout_width="160dp"
                android:layout_alignParentLeft="true"
                android:textAlignment="center"
                android:layout_marginRight="5dp"
                android:layout_below="@id/my_home"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/my_location"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_baseline_my_location_24"
                android:layout_width="160dp"
                android:layout_toRightOf="@id/my_home"
                android:layout_height="160dp"/>
            <TextView
                android:text="My Location"
                android:layout_width="160dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/my_home"
                android:textAlignment="center"
                android:layout_below="@id/my_location"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="180dp">
            <ImageView
                android:id="@+id/nearby_hospitals"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_baseline_local_hospital_24"
                android:layout_width="160dp"
                android:layout_alignParentLeft="true"
                android:layout_height="160dp"/>
            <TextView
                android:text="Hospitals Nearby"
                android:layout_width="160dp"
                android:layout_alignParentLeft="true"
                android:textAlignment="center"
                android:layout_marginRight="5dp"
                android:layout_below="@id/nearby_hospitals"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/nearby_pharmacy"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_baseline_local_pharmacy_24"
                android:layout_width="160dp"
                android:layout_toRightOf="@id/nearby_hospitals"
                android:layout_height="160dp"/>
            <TextView
                android:text="Pharmacies Nearby"
                android:layout_width="160dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/nearby_hospitals"
                android:textAlignment="center"
                android:layout_below="@id/nearby_pharmacy"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>